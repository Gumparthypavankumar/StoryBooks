<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" class="col s12" method="POST">
    <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" value="{{story.title}}" name="title">
                <label for="title">title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="storiesType">
                    {{#select story.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="storiesType">Visibility of Your Stories</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" id="filled-in-box" class="filled-in" {{#if allowComments}}checked="checked"{{/if}}>
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story</h5>
                <textarea name="body">{{story.body}}</textarea>
            </div>
        </div>

        <input type="submit" value="Submit" class="btn">
    </form>
</div>